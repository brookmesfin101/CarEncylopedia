@model CarEncylopedia.Main.ViewModels.CompareYearsViewModel

<div class="row">
    <div class="col-8">

    </div>
    <div class="col-4">
        <div class="row">
            <div class="col-6">
                @Html.DropDownList("CompareYearsModelDropDown", new SelectList(Model.Models), new { @class = "form-control", id = "CompareYearsModelDropDown" });
            </div>
            <div class="col-6">
                <button id="ViewYears" class="btn btn-primary">View Years</button>
            </div>
        </div>        
    </div>
</div>

<script type="text/javascript">
    $("#ViewYears").on("click", function () {
        var model = $("#CompareYearsModelDropDown").children("option:selected").val();

        $.ajax({
            beforeSend: function () {
                $("#busy").removeClass("d-none");
            },
            complete: function () {
                $("#busy").addClass("d-none");
            },
            url: '@Url.Action("CompareYearsByModel", "Main")',
            type: "POST",
            data: { make: JSON.stringify(make) },
            dataType: "html"
        })
    });
</script>